@using CSHSoft.Utilidades
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@if (User.IsInRole(Roles.Admin))
{
    <div class="Container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Veterinarias</h2>
            </div>


            <div class="col-6 text-right ">
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Agregar </a>
            </div>
        </div>
        <br />
        <br />
        <table id="tblVeterinarios" class="table table-striped table-bordered " style="width:100%;">
            <thead>
                <tr>
                    <th>IdVeterinario</th>
                    <th>Razon Social</th>
                    <th>Direccion</th>
                    <th>Horario De Atencion</th>
                    <th>Internacion</th>
                    <th>Observaciones</th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>

}
else
{
    <p>Tu perfil de usuario no permite el acceso a esta sección</p>
}

@section Scripts{
    <script src="~/js/Veterinaria.js"></script>
}

